<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo_pergamino"
    xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	
	    <LinearLayout
	        android:id="@+id/layoutLogo"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.1"
	        android:layout_margin="10dp"
	        android:orientation="vertical" >
	
	        <ImageView
	            android:id="@+id/logoEfectoNuevo"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:src="@drawable/logonuevoefecto" />
	        
	    </LinearLayout>
	    
	    <TableLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_weight="0.9" >
	
	        <TableRow
	            android:id="@+id/tableRow1"
	            android:layout_width="wrap_content"
	            android:layout_height="0dp" >
	            
	            <TextView
	                android:id="@+id/labelNombre"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.3"
	                android:layout_gravity="center_vertical"
	                android:textSize="20sp"
	                android:text="NOMBRE:" />
	            
	            <EditText 
	                android:id="@+id/txtNombreEfecto"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.7"/>
	            
	        </TableRow>
		</TableLayout>
	    
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="DESCRIPCION"
	        android:textSize="20sp"
	        android:layout_margin="10dp"
	        android:gravity="center"/>"
		
		<EditText
		    android:id="@+id/txtDescipcionEfecto"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:singleLine="false"/>
		
		<TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text=""
	        android:textSize="8dp"
	        android:gravity="center"/>
		
		<Button 
		    android:id="@+id/btnGuardarEfecto"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="GUARDAR"
		    android:layout_gravity="center"
		    />
	</LinearLayout>
</ScrollView><!-- From: file:/C:/Users/Astarenides/Desktop/Android/Tiradas/app/src/main/res/layout/crearefectos.xml -->