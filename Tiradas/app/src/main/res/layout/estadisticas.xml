   
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoestadisticas"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgLogo"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/logopath" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:padding="10dp"
        android:orientation="vertical" >
        
        <Button
			android:id="@+id/btnEstadisticasPersonaje"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_weight="0.3"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:text="ESTADISTICAS PERSONAJE" />

		<Button
		    android:id="@+id/btnTablaGeneral"
		    android:layout_width="fill_parent"
			android:layout_height="0dp"
		    android:layout_weight="0.3"
		    android:textStyle="bold"
			android:textColor="#FFFFFF"
		    android:text="ESTADISTICAS GENERALES" />
        
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="DESLIZA PARA MENU >>>"
        android:textSize="13sp" />

</LinearLayout>
    
	