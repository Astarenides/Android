<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoefectos"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgLogo"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/logopath" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:padding="10dp" >

        <Button
			android:id="@+id/btnCrearEfecto"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_gravity="center"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:layout_weight="0.3"
			android:text="CREAR EFECTOS" />
        
        <Button
			android:id="@+id/btnEditarEfecto"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_gravity="center"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:layout_weight="0.3"
			android:text="EDITAR EFECTOS" />
            
		<Button
		    android:id="@+id/btnAsignarStats"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_gravity="center"
		    android:textStyle="bold"
			android:textColor="#FFFFFF"
		    android:layout_weight="0.3"
		    android:text="ASIGNAR CARACTERISTICAS" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="DESLIZA PARA MENU >>>"
        android:textSize="13sp" />

</LinearLayout>
