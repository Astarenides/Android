<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoestadisticas_land"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="DESLIZA PARA MENU >>>"
        android:textSize="13sp" />

	<LinearLayout 
		android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.95"
	    android:orientation="horizontal" >
	
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="0.3"
	        android:padding="10dp"
	        android:orientation="vertical" >
	
	        <ImageView
	            android:id="@+id/imgLogo"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:scaleType="fitCenter"
	            android:src="@drawable/iconopath" />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="0.6"
	        android:orientation="vertical"
	        android:padding="10dp" >
	
	        <Button
				android:id="@+id/btnEstadisticasPersonaje"
				android:layout_width="fill_parent"
				android:layout_height="0dp"
				android:layout_weight="0.3"
				android:textStyle="bold"
				android:textColor="#FFFFFF"
				android:text="ESTADISTICAS PERSONAJE" />
	
			<Button
			    android:id="@+id/btnTablaGeneral"
			    android:layout_width="fill_parent"
				android:layout_height="0dp"
			    android:layout_weight="0.3"
			    android:textStyle="bold"
				android:textColor="#FFFFFF"
			    android:text="ESTADISTICAS GENERALES" />
	        
	    </LinearLayout>
	    
	</LinearLayout>
    
</LinearLayout>